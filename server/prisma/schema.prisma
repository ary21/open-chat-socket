// Prisma schema for chat application
// SQLite for development, easily switchable to PostgreSQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// User model - stores user information and presence
model User {
  id        String    @id @default(cuid())
  username  String    @unique
  online    Boolean   @default(false)
  lastSeen  DateTime?
  sockets   String    @default("[]") // JSON array of socket IDs for multi-tab support
  
  messages  Message[] @relation("UserMessages")
  
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

// Message model - stores all chat messages
model Message {
  id         String   @id @default(cuid())
  
  fromUser   User     @relation("UserMessages", fields: [fromUserId], references: [id], onDelete: Cascade)
  fromUserId String
  
  toUserId   String   // Username of recipient
  text       String
  roomId     String   // Format: "userA#userB" (alphabetically sorted)
  
  createdAt  DateTime @default(now())
  
  @@index([roomId, createdAt])
  @@index([fromUserId])
}
