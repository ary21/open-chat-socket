{
  "name": "chat-app",
  "version": "1.0.0",
  "private": true,
  "description": "Real-time chat application with React, Socket.IO, Express, and Prisma",
  "scripts": {
    "dev": "concurrently \"pnpm dev:server\" \"pnpm dev:client\"",
    "dev:client": "pnpm --filter client dev",
    "dev:server": "pnpm --filter server dev",
    "migrate": "pnpm --filter server migrate",
    "migrate:reset": "pnpm --filter server migrate:reset"
  },
  "keywords": ["chat", "socket.io", "react", "express", "prisma"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "client",
    "server"
  ]
}
